<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_help_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/dialog_rounder"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvHelpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need help?"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_close"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:padding="4dp"/>
    </RelativeLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvContactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact us or find our location"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/black"/>

    <!-- Блок с иконками и текстом -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- Телефон -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/ivPhoneIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_ic"
                android:contentDescription="Phone"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 (555) 123-4567"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                android:textColor="#494949"/>
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/ivEmailIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email_ic"
                android:contentDescription="Email"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact@pinupsportsbar.com"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                android:textColor="#494949"/>
        </LinearLayout>

        <!-- Адрес -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivLocationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_ic"
                android:contentDescription="Location"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="145 Retro Avenue, Brooklyn, NY 11201, USA"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                android:textColor="#494949"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Время работы -->
    <TextView
        android:id="@+id/tvWorkTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12:00 PM – 11:00 PM"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#00A264"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp"/>
</LinearLayout>
