<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/chip_icon_tint</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="chipGroupStyle">@style/Widget.Material3.ChipGroup</item>

    </style>


    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    <!-- ваш кастомный чип -->


    <!-- стиль для **выбранного** чипа -->
    <!-- Selected Chip: Зеленый -->
    <style name="Widget.App.MenuChipSelected" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">#4DA764</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MenuChip.Rounded</item>
        <item name="closeIconVisible">false</item>
        <item name="closeIconEnabled">false</item>
        <item name="android:checkable">false</item>
    </style>



    <!-- Скругление -->
    <style name="ShapeAppearance.MenuChip.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">80%</item>
    </style>

    <style name="ImageCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
        <!-- Скругление только у верхних углов -->
        <style name="ShapeAppearance.App.TopRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopLeft">16dp</item>
            <item name="cornerSizeTopRight">16dp</item>
            <item name="cornerSizeBottomLeft">0dp</item>
            <item name="cornerSizeBottomRight">0dp</item>
        </style>


    <style name="Widget.MyApp.TextInputLayout.Outline" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#00A264</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <style name="Widget.App.MenuChipUnselected" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@android:color/holo_red_light</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MenuChip.Rounded</item>
        <item name="closeIconVisible">false</item>
        <item name="closeIconEnabled">false</item>
        <item name="android:checkable">false</item>
    </style>



</resources>